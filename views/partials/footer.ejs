        });

        // 2. Close the dropdown if the user clicks anywhere outside of it
        window.addEventListener('click', function (event) {
            
            // Check if the click was *outside* both the trigger and the dropdown
            if (!hotelsTrigger.contains(event.target) && !hotelDropdown.contains(event.target)) {
                
