  <script>
    // Wait for the DOM to be fully loaded before running the script
    document.addEventListener('DOMContentLoaded', () => {

      // Find all card wrappers
      const allCards = document.querySelectorAll('.ts_card_wrapper');

      // Initialize a carousel for each card found
      allCards.forEach(card => {
        const slider = card.querySelector('.ts_card_carousel_slider');
        const slides = card.querySelectorAll('.ts_card_carousel_slide');
        const prevBtn = card.querySelector('.ts_card_carousel_btn_prev');
        const nextBtn = card.querySelector('.ts_card_carousel_btn_next');
        const dots = card.querySelectorAll('.ts_card_dot');

        let currentIndex = 0;
        const slideCount = slides.length;

        // Function to move to a specific slide
        function goToSlide(index) {
          // Bound check
          if (index < 0) index = 0;
          if (index >= slideCount) index = slideCount - 1;

          // Move the slider
          slider.style.transform = `translateX(-${index * 100}%)`;

          // Update the active dot
          dots.forEach((dot, i) => {
            dot.classList.toggle('ts_card_dot_active', i === index);
          });

          // Update button visibility
          if (prevBtn) prevBtn.style.display = (index === 0) ? 'none' : 'flex';
          if (nextBtn) nextBtn.style.display = (index === slideCount - 1) ? 'none' : 'flex';

          currentIndex = index;
        }

        // Ensure controls exist before adding listeners
        if (nextBtn) {
          nextBtn.addEventListener('click', () => {
            goToSlide(currentIndex + 1);
          });
        }

        if (prevBtn) {
          prevBtn.addEventListener('click', () => {
            goToSlide(currentIndex - 1);
          });
        }

        // Event listeners for the pagination dots
        dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            goToSlide(index);
          });
        });

        // Initialize the carousel to the first slide
        if (slides.length > 0) {
          goToSlide(0);
        }
      });
    });
  </script>

