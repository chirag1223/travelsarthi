<div id="home" class="page-transition">
    <section class="relative min-h-screen flex items-center overflow-hidden">
        <div class="absolute inset-0 z-0">
            <img src="/images/hero.avif"
                class="h-full w-full object-cover scale-105" alt="Swiss Alps">
            <div class="absolute inset-0 bg-gradient-to-r from-slate-900/80 via-slate-900/40 to-transparent"></div>
        </div>

        <div class="container relative z-10 mx-auto px-6">
            <div class="max-w-3xl space-y-8">
                <div class="inline-flex items-center rounded-full border border-white/20 bg-white/10 px-4 py-1.5 text-xs font-bold tracking-widest uppercase backdrop-blur-md text-sky-300">
                    <span class="mr-2 h-2 w-2 rounded-full bg-orange-500 animate-pulse"></span>
                    Your Ultimate Trip Planner
                </div>
                
                <h1 class="text-6xl md:text-8xl font-black text-white leading-[0.9] tracking-tighter">
                    Discover the <br>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-orange-400">Unseen World.</span>
                </h1>
                
                <p class="text-lg md:text-xl text-slate-200 max-w-xl font-medium leading-relaxed drop-shadow-md">
                    Experience travel like never before with hand-picked destinations and personalized itineraries.
                </p>

                <div class="flex flex-wrap gap-4">
                    <a href="/packages" 
   class="inline-flex items-center justify-center px-10 h-14 bg-orange-500 text-white rounded-full font-bold hover:bg-white hover:text-slate-900 transform hover:-translate-y-1 transition-all duration-300 shadow-lg shadow-orange-500/20 uppercase tracking-widest text-xs">
    Start Planning
</a>
                </div>
            </div>
        </div>
        <div class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-slate-100 to-transparent"></div>
    </section>

    <section class="py-24 bg-slate-100">
    <div class="container mx-auto px-6">
        <div class="flex items-end justify-between mb-12">
            <div>
                <span class="text-orange-600 font-bold tracking-widest uppercase text-xs">Top Picks</span>
                <h2 class="text-4xl font-black text-slate-900 mt-2 tracking-tight">Trending Now</h2>
            </div>
            <div class="w-24 h-1 bg-sky-500 rounded-full mb-2"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% trending.forEach((item, index) => { %>
            <div class="group relative rounded-[2rem] overflow-hidden aspect-[16/11] cursor-pointer shadow-2xl transition-all duration-500 hover:-translate-y-2">
                <img src="<%= item.image %>" class="absolute inset-0 object-cover w-full h-full transition-transform duration-1000 group-hover:scale-110" alt="<%= item.title %>">
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent opacity-80"></div>
                <div class="absolute bottom-6 left-6 right-6 text-white">
                    <div class="flex items-center gap-2 mb-2">
                        <span class="h-px w-8 bg-sky-400"></span>
                        <span class="text-xs font-bold uppercase tracking-widest text-sky-400">Trending</span>
                    </div>
                    <h3 class="text-2xl font-black mb-1"><%= item.title %></h3>
                    <p class="text-xs text-slate-300 opacity-0 group-hover:opacity-100 transition-opacity duration-300 line-clamp-1"><%= item.description %></p>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</section>

<section class="py-24 bg-white">
    <div class="container mx-auto px-6">
        <div class="flex flex-col lg:flex-row justify-between items-end mb-12 gap-8">
            <div class="max-w-xl">
                <h2 class="text-4xl font-black text-slate-900 tracking-tight">Top Destinations</h2>
                <p class="text-slate-600 mt-3 font-medium text-lg">Curated lists based on traveler reviews.</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% destinations.forEach(item => { %>
            <div class="group relative rounded-[2rem] overflow-hidden aspect-[16/11] cursor-pointer shadow-2xl transition-all duration-500 hover:-translate-y-2">
                
                <img src="<%= item.image %>" 
                     class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" 
                     alt="<%= item.title %>">
                
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/20 to-transparent opacity-90"></div>

                <div class="absolute top-4 left-4 bg-white/20 backdrop-blur-md px-2 py-1 rounded-lg flex items-center gap-1 border border-white/10">
                    <i data-lucide="star" class="h-3 w-3 text-orange-400 fill-orange-400"></i>
                    <span class="text-[10px] font-black text-white"><%= item.rating %></span>
                </div>

                <div class="absolute bottom-6 left-6 right-6 text-white">
                    <div class="flex items-center gap-2 mb-2">
                        <span class="h-px w-6 bg-sky-400"></span>
                        <div class="flex items-center text-sky-400 font-bold text-[9px] uppercase tracking-widest">
                            <i data-lucide="map-pin" class="h-3 w-3 mr-1"></i> <%= item.location %>
                        </div>
                    </div>

                    <h3 class="text-2xl font-black mb-1 tracking-tight"><%= item.title %></h3>
                    
                    <div class="flex justify-between items-end mt-2">
                        <div>
                            <p class="text-[8px] font-bold text-slate-400 uppercase tracking-widest">Duration</p>
                            <p class="text-xs font-medium text-white italic"><%= item.duration %></p>
                        </div>
                        <div class="text-right">
                            <p class="text-[8px] font-bold text-slate-400 uppercase tracking-widest">Starts from</p>
                            <p class="text-xl font-black text-orange-400 leading-tight"><%= item.price %></p>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</section>
</div>

