<div id="home" class="page-transition">
    <section class="relative min-h-[100vh] flex items-center pt-20">
        <div class="absolute inset-0 z-0">
            <img src="https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?q=80&w=2000&auto=format&fit=crop"
                class="h-full w-full object-cover" alt="Swiss Alps">
            <div class="hero-overlay absolute inset-0"></div>
        </div>

        <div class="container relative z-10 mx-auto px-4 grid lg:grid-cols-12 gap-12 items-center">
            <div class="lg:col-span-7 space-y-6 text-white pt-10">
                <div
                    class="inline-flex items-center rounded-full border border-white/30 bg-white/10 px-3 py-1 text-xs font-medium backdrop-blur-md">
                    <span class="mr-1 h-2 w-2 rounded-full bg-green-400"></span>
                    Trip Planner
                </div>
                <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight leading-[1.1] drop-shadow-sm">
                    Discover the <br>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-200 to-white">Unseen
                        World.</span>
                </h1>
                <p class="text-xs md:text-xs text-gray-100 max-w-2xl font-light leading-relaxed drop-shadow-md">
                    Don't just book a flight. Design an experience. Use our AI to curate personalized itineraries,
                    visa guides, and luxury stays.
                </p>

                <div class="relative max-w-lg mt-8 group">
                    <div
                        class="absolute -inset-1 bg-gradient-to-r from-blue-400 to-purple-400 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200">
                    </div>
                    <div class="relative flex items-center bg-white rounded-lg p-2 shadow-xl">
                        <i data-lucide="sparkles" class="ml-3 h-5 w-5 text-purple-600"></i>
                        <input type="text" placeholder="Ask AI: 'Plan a romantic 5-day trip to Kyoto...'"
                            class="w-full bg-transparent border-0 px-4 py-3 text-gray-900 placeholder:text-gray-400 focus:ring-0 text-sm md:text-base outline-none">
                        <button class="bg-black text-white p-2.5 rounded-md hover:bg-gray-800 transition-colors">
                            <i data-lucide="arrow-right" class="h-5 w-5"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Tab section commented out -->
        </div>
    </section>

    <!-- Trending Section with EJS -->
    <section class="py-8 bg-slate-100">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-2xl font-bold tracking-tight flex items-center gap-2">
                    <i data-lucide="flame" class="h-5 w-5 text-orange-500 fill-orange-500"></i> Trending Now
                </h2>
                <!-- <a href="#" class="text-sm font-semibold hover:underline">See all</a> -->
            </div>

            <!-- Changed from flex overflow-x-auto to grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% trending.forEach((item, index) => { %>
                <div class="relative rounded-2xl overflow-hidden aspect-[4/3] group cursor-pointer shadow-md hover:shadow-lg transition-shadow">
                    <img src="<%= item.image %>"
                        class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-110"
                        alt="<%= item.title %>">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent">
                    </div>
                    <div class="absolute bottom-4 left-4 text-white">
                        <h3 class="text-xl font-bold"><%= item.title %></h3>
                        <p class="text-sm opacity-90"><%= item.description %></p>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Destinations Section -->
    <section class="py-8 bg-slate-50">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between items-end mb-10 gap-6">
                <div>
                    <h2 class="text-3xl font-bold tracking-tight">Explore Top Destinations</h2>
                    <p class="text-muted-foreground mt-2">Curated lists based on traveler reviews and seasonal
                        pricing.</p>
                </div>

                <!-- Simplified tabs - removed JavaScript functionality -->
                <div class="flex overflow-x-auto gap-2 pb-2 scrollbar-hide w-full md:w-auto">
                    <button
                        class="px-4 py-2 rounded-full bg-black text-white text-sm font-medium whitespace-nowrap transition-colors">
                        All Places
                    </button>
                    <button
                        class="px-4 py-2 rounded-full border border-slate-200 bg-white hover:bg-slate-100 text-slate-700 text-sm font-medium whitespace-nowrap transition-colors">
                        Beach
                    </button>
                    <button
                        class="px-4 py-2 rounded-full border border-slate-200 bg-white hover:bg-slate-100 text-slate-700 text-sm font-medium whitespace-nowrap transition-colors">
                        Mountains
                    </button>
                    <button
                        class="px-4 py-2 rounded-full border border-slate-200 bg-white hover:bg-slate-100 text-slate-700 text-sm font-medium whitespace-nowrap transition-colors">
                        City Break
                    </button>
                    <button
                        class="px-4 py-2 rounded-full border border-slate-200 bg-white hover:bg-slate-100 text-slate-700 text-sm font-medium whitespace-nowrap transition-colors">
                        Honeymoon
                    </button>
                </div>
            </div>

            <!-- EJS rendering for destinations -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 pb-8">
                <% destinations.forEach(item => { %>
                <div class="group relative bg-white rounded-xl overflow-hidden border shadow-sm hover:shadow-lg transition-all duration-300">
                    <div class="relative h-64 overflow-hidden">
                        <% if (item.tag) { %>
                        <span class="absolute top-3 left-3 text-xs font-bold px-2 py-1 rounded shadow-sm z-10 <%= item.tagColor %>">
                            <%= item.tag %>
                        </span>
                        <% } %>
                        <img src="<%= item.image %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" alt="<%= item.title %>">
                        <button class="absolute bottom-3 right-3 bg-white p-2 rounded-full shadow hover:text-red-500 transition-colors">
                            <i data-lucide="heart" class="h-4 w-4"></i>
                        </button>
                    </div>
                    <div class="p-4">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="font-bold text-lg"><%= item.title %></h3>
                                <div class="flex items-center text-slate-500 text-sm mt-1">
                                    <i data-lucide="map-pin" class="h-3 w-3 mr-1"></i> <%= item.location %>
                                </div>
                            </div>
                            <div class="text-right">
                                <% if (item.oldPrice) { %>
                                <p class="text-xs text-slate-500 line-through"><%= item.oldPrice %></p>
                                <% } else { %>
                                <p class="text-xs text-transparent select-none">.</p>
                                <% } %>
                                <div class="flex items-center justify-end">
                                    <p class="text-xs text-slate-500 mr-1">Starting at</p>
                                    <p class="font-bold text-blue-600"><%= item.price %></p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 pt-4 border-t flex justify-between items-center text-sm">
                            <span class="flex items-center text-slate-600">
                                <i data-lucide="star" class="h-3 w-3 text-yellow-400 mr-1 fill-yellow-400"></i> <%= item.rating %> (<%= item.reviews %>)
                            </span>
                            <span class="text-slate-400"><%= item.duration %></span>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>

            <div class="mt-8 text-center">
                <button
                    class="inline-flex h-11 items-center justify-center rounded-md border border-input bg-white px-8 text-sm font-medium shadow-sm hover:bg-slate-50 transition-colors">
                    Load More Destinations
                </button>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-8 bg-white overflow-hidden">
        <div class="container mx-auto px-4">
            <div class="text-center max-w-2xl mx-auto mb-12">
                <h2 class="text-3xl font-bold tracking-tight text-slate-900">Loved by Travelers Worldwide</h2>
                <p class="text-slate-500 mt-4 text-lg">Don't just take our word for it. Read what our happy
                    travelers have to say about their journeys.</p>
            </div>

            <div class="flex justify-center gap-8 mb-12 text-sm font-medium text-slate-600">
                <div class="flex items-center gap-2">
                    <span class="flex text-yellow-400">
                        <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                        <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                        <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                        <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                        <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                    </span>
                    <span>4.9/5 Average Rating</span>
                </div>
                <div class="w-px h-5 bg-slate-200 hidden sm:block"></div>
                <div class="hidden sm:block">24/7 Customer Support</div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <% testimonials.forEach(testimonial => { %>
                <div class="relative bg-slate-50 p-8 rounded-2xl border border-slate-100 shadow-sm hover:shadow-md transition-shadow duration-300 flex flex-col">
                    <div class="absolute top-6 right-8 text-slate-200">
                        <i data-lucide="quote" class="w-12 h-12 rotate-180 opacity-50"></i>
                    </div>
                    <div class="flex gap-1 text-yellow-400 mb-4">
                        <% for(let i = 1; i <= 5; i++) { %>
                            <% if (testimonial.rating >= i) { %>
                                <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                            <% } else if (testimonial.rating >= i - 0.5 && testimonial.rating < i) { %>
                                <i data-lucide="star-half" class="w-4 h-4 fill-current"></i>
                            <% } else { %>
                                <i data-lucide="star" class="w-4 h-4"></i>
                            <% } %>
                        <% } %>
                    </div>
                    <blockquote class="text-slate-700 leading-relaxed mb-6 relative z-10 flex-grow">
                        "<%- testimonial.comment %>"
                    </blockquote>
                    <div class="flex items-center gap-4 mt-auto">
                        <img src="<%= testimonial.image %>"
                            alt="<%= testimonial.name.split(' ')[0] %> <%= testimonial.name.split(' ')[1]?.charAt(0) %>." 
                            class="w-12 h-12 rounded-full object-cover ring-2 ring-white">
                        <div>
                            <h4 class="font-bold text-slate-900 text-sm"><%= testimonial.name %></h4>
                            <p class="text-slate-500 text-xs"><%= testimonial.location %></p>
                            <p class="text-slate-400 text-xs mt-1"><%= testimonial.date %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>

            <div class="mt-8 text-center border-t border-slate-100 pt-8">
                <p class="text-slate-600 mb-4">Ready to start your own adventure?</p>
                <a href="https://www.google.com/search?sca_esv=7c6910cd552a3b71&sxsrf=AE3TifNs_S6kiCQHNqWa_jj9tpEgA-IIpg:1765135322717&q=travel+sarthi&si=AMgyJEtREmoPL4P1I5IDCfuA8gybfVI2d5Uj7QMwYCZHKDZ-ExVjNkP4s_bgp0L_Q2RKIxDOsB7DWlonvtU1Du_GLzmY_3bKv_CxIcZy-dQVwVXnMYH01CZnWID8Uc2K2IZuLNtSUdF_QVdGysUmWkWebnm32Z-JZQ%3D%3D&sa=X&ved=2ahUKEwjuopC_mayRAxVAUGwGHWAXMnMQrrQLegQIIRAA&biw=1366&bih=599&dpr=1"
                    target="_blank"
                    class="inline-flex items-center justify-center rounded-full bg-black px-6 py-3 text-sm font-medium text-white shadow hover:bg-slate-800 transition-colors">
                    Read All 2,400 Reviews
                </a>
            </div>
        </div>
    </section>
</div>

<script>
// Initialize Lucide icons
lucide.createIcons();
</script>