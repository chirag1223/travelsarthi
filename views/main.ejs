        function switchTab(tabId) {
            document.querySelectorAll('.hero-tab-content').forEach(el => el.classList.add('hidden'));
            document.getElementById('tab-' + tabId).classList.remove('hidden');

            const buttons = ['flights', 'hotels', 'cars'];
            buttons.forEach(btn => {
