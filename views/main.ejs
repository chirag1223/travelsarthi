            from {
                opacity: 0;
                transform: translate(-50%, -48%) scale(0.96);
            }

            to {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1);
            }
        }

        @keyframes modalOut {
            from {
                opacity: 1;
